<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    <bean id="ans1" class="question.Answer">
        <constructor-arg value="1" type="int"></constructor-arg>
        <constructor-arg value="java is programming langauge"></constructor-arg>
        <constructor-arg value="shubham"></constructor-arg>
    </bean> 
    
    <bean id="ans2" class="question.Answer">
        <constructor-arg value="1" type="int"></constructor-arg>
        <constructor-arg value="java is platform independent"></constructor-arg>
        <constructor-arg value="abhishek"></constructor-arg>
    </bean> 
    
    <bean id="que" class="question.Question">
        <constructor-arg value="1000" type="int"></constructor-arg>
        <constructor-arg value="what is java"></constructor-arg>
        <constructor-arg>
            <list>
                <ref bean="ans1"></ref>
                <ref bean="ans2"></ref>
            </list>
        </constructor-arg>
    </bean>
</beans>

